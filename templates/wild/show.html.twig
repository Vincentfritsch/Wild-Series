{% extends 'base.html.twig' %}
{% block title %} {{ slug }} {% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{ program.poster }}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Categorie : {{ program.Category.name }}</p>
            <p>Saisons</p>
            <ul>
                {% for season in seasons %}
                    <li><h4><a href="{{ path('wild_season', {'id':season.id })}}">Saison {{ season.number }}</a></h4></li>

                    <li><h5>Histoire :</h5> <p>{{ season.description }} </p></li>
                    {% else %}
                    <p class="alert alert-danger"> Aucune saison pour l'instant en cours</p>
                {% endfor %}
            </ul>
        </div>
    </div>

    <a href="{{ path('wild_index') }}">
       Retour Ã  l'accueil
    </a>
{% endblock %}